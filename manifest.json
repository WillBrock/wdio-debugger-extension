{
    "name": "WebdriverIO Pauser",
    "version": "0.1",
    "description": "Start & stop execution of test while they are running",
	"permissions": ["declarativeContent", "storage"],
	"background": {
      "scripts": ["background.js"],
      "persistent": false
    },
	"page_action": {
      "default_popup": "popup.html",
	  "default_icon" : "images/wdio-icon.png",
	"default_title" : "WebdriverIO Pauser"
    },
	"content_scripts": [{
		"js": ["content.js"],
		"matches": ["https://*/*"]
	}],
    "manifest_version": 2
  }
